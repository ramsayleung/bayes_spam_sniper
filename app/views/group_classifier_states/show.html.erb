<% content_for :title, "Showing group classifier state" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing group classifier state</h1>

  <div class="w-full my-5 space-y-5">
    <!-- Basic Information -->
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h2 class="text-xl font-bold mb-4">Basic Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <strong class="block font-medium mb-1">Group Id:</strong>
          <%= @group_classifier_state.group_id %>
        </div>
        <div>
          <strong class="block font-medium mb-1">Group name:</strong>
          <%= @group_classifier_state.group_name %>
        </div>
        <div>
          <strong class="block font-medium mb-1">Total spam messages:</strong>
          <%= @group_classifier_state.total_spam_messages %>
        </div>
        <div>
          <strong class="block font-medium mb-1">Total ham messages:</strong>
          <%= @group_classifier_state.total_ham_messages %>
        </div>
      </div>
    </div>

    <!-- Summary Statistics -->
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h2 class="text-xl font-bold mb-4">Classifier Summary</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-blue-50 p-4 rounded-lg">
          <div class="text-sm text-blue-800 font-medium">Total Vocabulary</div>
          <div class="text-2xl font-bold text-blue-600"><%= @group_classifier_state.vocabulary_size %></div>
        </div>
        <div class="bg-red-50 p-4 rounded-lg">
          <div class="text-sm text-red-800 font-medium">Total Spam Words</div>
          <div class="text-2xl font-bold text-red-600"><%= @group_classifier_state.total_spam_words_count %></div>
        </div>
        <div class="bg-green-50 p-4 rounded-lg">
          <div class="text-sm text-green-800 font-medium">Total Ham Words</div>
          <div class="text-2xl font-bold text-green-600"><%= @group_classifier_state.total_ham_words_count %></div>
        </div>
      </div>
    </div>

    <!-- K Value Selector -->
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h2 class="text-xl font-bold mb-4">Top Words Analysis</h2>
      <div class="mb-4">
        <label for="kValue" class="block text-sm font-medium text-gray-700 mb-2">Select number of top words to display (5-50):</label>
        <%= form_with url: group_classifier_state_path(@group_classifier_state), method: :get, local: true, class: "flex items-center space-x-3" do |form| %>
          <%= form.number_field :k, value: @k_value || 20, min: 5, max: 50, class: "w-24 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          <%= form.submit "Update", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
      </div>

      <!-- Top Spam Words -->
      <div class="mb-8">
        <h3 class="text-lg font-semibold mb-3 text-red-600">Top <%= @k_value || 20 %> Spam Words</h3>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rank</th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Word</th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Count</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @group_classifier_state.top_spam_words(@k_value || 20).each_with_index do |(word, count), index| %>
                <tr>
                  <td class="px-3 py-2 whitespace-nowrap text-sm font-medium text-gray-500"><%= index + 1 %></td>
                  <td class="px-3 py-2 whitespace-nowrap text-sm font-medium text-gray-900"><%= word %></td>
                  <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-500"><%= count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Top Ham Words -->
      <div>
        <h3 class="text-lg font-semibold mb-3 text-green-600">Top <%= @k_value || 20 %> Ham Words</h3>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rank</th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Word</th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Count</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @group_classifier_state.top_ham_words(@k_value || 20).each_with_index do |(word, count), index| %>
                <tr>
                  <td class="px-3 py-2 whitespace-nowrap text-sm font-medium text-gray-500"><%= index + 1 %></td>
                  <td class="px-3 py-2 whitespace-nowrap text-sm font-medium text-gray-900"><%= word %></td>
                  <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-500"><%= count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%= link_to "Edit this group classifier state", edit_group_classifier_state_path(@group_classifier_state), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to group classifier states", group_classifier_states_path(index_params), class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Destroy this group classifier state", @group_classifier_state, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
